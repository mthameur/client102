{% if section.settings.preloader_check %}
<style>
  
#preloader {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: {{section.settings.preloader_bg}};
  z-index: 99;

}

#status {
  width: 200px;
  height: 200px;
  position: absolute;
  left: 50%;
  top: 50%;
  background-image: url("{{ section.settings.preloader_img | img_url:'' }}");
  background-repeat: no-repeat;
  background-position: center;
  margin: -100px 0 0 -100px;
  background-size: 100%;
}
</style>
<div id="preloader">
  <div id="status">&nbsp;</div>
</div>
{% endif %}
{% schema %}
  {
    "name": "Preloader",
    "settings": [
          {
        "type":"checkbox",
        "id":"preloader_check",
        "label":"Enable or Disable Preloader",
            "default":true
      },
      {
        "type":"image_picker",
        "id":"preloader_img",
        "label":"Select Logo For Preloader"
      },
      {
        "type":"color",
        "id":"preloader_bg",
        "label":"Select Preloader Background"
      }
    ]
  }
{% endschema %}
<script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>

{% javascript %}
  $(window).on('load', function() { // makes sure the whole site is loaded 
  $('#status').fadeOut(); // will first fade out the loading animation 
  $('#preloader').delay(350).fadeOut('slow'); // will fade out the white DIV that covers the website. 
  $('body').delay(350).css({'overflow':'visible'});
})
{% endjavascript %}